{
    "name": "larva/laravel-package",
    "description": "Laravel package template",
    "license": "MIT",
    "authors": [
        {
            "name": "larva team",
            "email": "support@larva.com.cn"
        }
    ],
    "require": {
        "laravel/framework": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Larva\\LaravelPackage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.18",
        "brainmaestro/composer-git-hooks": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "\\Larva\\LaravelPackage\\PackageServiceProvider"
            ]
        },
        "hooks": {
            "pre-commit": [
                "composer check-style",
                "composer test"
            ],
            "pre-push": [
                "composer test"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "cghooks remove",
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks remove",
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "./vendor/bin/cghooks",
        "check-style": "./vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run --ansi",
        "fix-style": "./vendor/bin/php-cs-fixer fix --using-cache=no --ansi",
        "test": "./vendor/bin/phpunit --colors"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    }
}
